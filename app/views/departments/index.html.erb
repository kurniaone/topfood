<%= render 'shared/master-tab.html.erb' %>
<div class="content">
  <h2>Department</h2>

  <div class="inner">
    <div class="link-button-container">
      <%= link_to "New", new_department_path, class: 'link-button' %>

      <div class="clear"></div>
    </div>

    <table class="table">
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th class="last">&nbsp;</th>
      </tr>
      <% @departments.each do |dept| %>
        <tr>
          <td><%= dept.code %></td>
          <td><%= dept.name %></td>
          <td class="last">
            <%= link_to 'Edit', edit_department_path(dept) %>
            <%= link_to 'Remove', department_path(dept), method: :delete, confirm: 'Are you sure?' %>
          </td>
        </tr>
      <% end unless @departments.blank? %>
    </table>

    <div class="actions-bar wat-cf">
      <div class-"page-entries">
        <%= page_entries_info @departments %>
      </div>
      <div class="pagination">
        <%= will_paginate %>
      </div>
    </div>

  </div>
</div>