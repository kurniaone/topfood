<%= form_for @position, html: { class: 'form' } do |f| %>
  <%= error_messages(@position).html_safe %>

  <div class="group">
    <%= f.label :department_id, 'Department', class: 'label' %>
    <%= f.select :department_id, options_for_select(department_options, @position.department_id), {}, :class => 'selectbox' %>
  </div>
  <div class="group">
    <%= f.label :level, 'Level', class: 'label' %>
    <%= f.text_field :level, class: 'text_field' %>
  </div>
  <div class="group">
    <%= f.label :name, 'Name', class: 'label' %>
    <%= f.text_field :name, class: 'text_field' %>
  </div>
  <div class="group">
    <%= f.label :description, 'Description', class: 'label' %>
    <%= f.text_area :description, class: 'text_area', rows: 3 %>
  </div>

  <div class="actions-bar wat-cf">
    <%= f.submit "Save", class: 'link-button' %>
    <%= link_to 'Cancel', positions_path, class: 'link-button' %>
  </div>
<% end %>
