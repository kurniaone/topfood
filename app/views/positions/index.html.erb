<%= render 'shared/master-tab.html.erb' %>
<div class="content">
  <h2>Position</h2>

  <div class="inner">
    <div class="link-button-container">
      <%= link_to "New", new_position_path, class: 'link-button' %>

      <div class="clear"></div>
    </div>

    <table class="table">
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th class="last">&nbsp;</th>
      </tr>
      <% @positions.each do |p| %>
        <tr>
          <td><%= p.code %></td>
          <td><%= p.name %></td>
          <td class="last">
            <%= link_to 'Edit', edit_position_path(p) %>
            <%= link_to 'Remove', position_path(p), method: :delete, confirm: 'Are you sure?' %>
          </td>
        </tr>
      <% end unless @positions.blank? %>
    </table>

    <div class="actions-bar wat-cf">
      <div class-"page-entries">
        <%= page_entries_info @positions %>
      </div>
      <div class="pagination">
        <%= will_paginate %>
      </div>
    </div>

  </div>
</div>