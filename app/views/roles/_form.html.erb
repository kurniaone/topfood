<%= form_for @role, html: { class: 'form' } do |f| %>
  <%= error_messages(@role).html_safe %>

  <div class="group">
    <%= f.label :code, 'Code', class: 'label' %>
    <%= f.text_field :code, class: 'text_field' %>
  </div>
  <div class="group">
    <%= f.label :name, 'Name', class: 'label' %>
    <%= f.text_field :name, class: 'text_field' %>
  </div>
  <div class="group">
    <%= f.label :description, 'Description', class: 'label' %>
    <%= f.text_area :description, class: 'text_area', rows: 3 %>
  </div>

  <div class="actions-bar wat-cf">
    <%= f.submit "Save", class: 'link-button' %>
    <%= link_to 'Cancel', roles_path, class: 'link-button' %>
  </div>
<% end %>
