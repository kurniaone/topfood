<%= render('shared/orders-tab.html.erb') if current_user.su? %>

<div class="content">
  <h2>Purchase Order</h2>

  <div class="inner">
    <p>
      <%= label_tag :order_number, 'Order Number', class: 'detail-label' %>
      <span>: <%= @order.order_number %></span>
    </p>
    <p>
      <%= label_tag :order_date, 'Order Date', class: 'detail-label' %>
      <span>: <%= @order.order_date %></span>
    </p>
    <p>
      <%= label_tag :created_by, 'Created By', class: 'detail-label' %>
      <span>: <%= @order.user.try(:name) %></span>
    </p>
    <p>
      <%= label_tag :branch_id, 'Branch', class: 'detail-label' %>
      <span>: <%= @order.branch.try(:name) %></span>
    </p>

    <p>
      <%= label_tag :order_details, 'Detail Orders', class: 'detail-label' %>
      <span>: </span>
    </p>
    <table class="table">
      <tr>
        <th>Description</th>
        <th class="center">Quantity</th>
        <th>Unit</th>
        <th>Used date</th>
      </tr>

      <% @order.order_details.each do |detail| %>
        <tr class="<% cycle('odd', 'even') %>">
          <td><%= detail.description %></td>
          <td class="center"><%= detail.quantity %></td>
          <td><%= detail.unit.try(:name) %></td>
          <td><%= detail.used_date %></td>
        </tr>
      <% end %>
    </table>

    <h3>Approvals</h3>
    <% @order.approvals.each_with_index do |app, idx| %>
      <div class="approval-status">
        <b>Approval <%= idx+1 %></b><br /><br />

        <span class="<%= app.status.downcase %>"><%= app.status %></span><br />
        <%= "<span class='grey'>#{date_time_format app.do_at}</span>".html_safe unless app.pending %>
        <% if @order.show_link_for(current_user, app) %>
          <%= link_to "Approve", approve_purchase_orders_path(app, approved: 1), :class => 'green' %>
          <%= link_to "Reject", approve_purchase_orders_path(app, approved: 0), :class => 'red' %>
        <% end %>
        <br /><br />

        <b><%= app.user.name %></b><br />
        <span class="grey">(<%= app.role.name %>)</span>
      </div>
    <% end %>

    <%= render "shared/implementer-element" if @order.approved? %>
    <div class="clear"></div>

    <div class="link-button-container">
      <%= link_to "Back", purchase_orders_path, class: 'link-button' %>

      <% if @order.no_approval && current_user.role?('sm') %>
        <%= link_to "Edit", edit_purchase_order_path(@order), class: 'link-button' %>
        <%= link_to "Remove", purchase_order_path(@order), :method => :delete, class: 'link-button', confirm: 'Are you sure?' %>
      <% end %>

      <%= link_to "Download", purchase_order_path(@order, format: :xls), class: 'link-button' %>

      <div class="clear"></div>
    </div>
  </div>
</div>
