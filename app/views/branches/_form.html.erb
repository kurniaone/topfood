<%= form_for @branch, html: { class: 'form' } do |f| %>
  <%= error_messages(@branch).html_safe %>

  <div class="group">
    <%= f.label :name, 'Name', class: 'label' %>
    <%= f.text_field :name, class: 'text_field' %>
  </div>
  <div class="group">
    <%= f.label :phone, 'Phone', class: 'label' %>
    <%= f.text_field :phone, class: 'text_field' %>
  </div>
  <div class="group">
    <%= f.label :address, 'Address', class: 'label' %>
    <%= f.text_area :address, class: 'text_area', rows: 3 %>
  </div>
  <div class="group">
    <%= f.label :profile, 'Profile', class: 'label' %>
    <%= f.text_area :profile, class: 'text_area', rows: 7 %>
  </div>

  <div class="actions-bar wat-cf">
    <%= f.submit "Save", class: 'link-button' %>
    <%= link_to 'Cancel', branches_path, class: 'link-button' %>
  </div>
<% end %>
