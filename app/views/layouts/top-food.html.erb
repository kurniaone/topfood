<!DOCTYPE html>
<html>
<head>
  <title>PT. Top Food Indonesia</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :css %>
</head>
<body>
  <div id="container">
    <%= render 'layouts/header' %>

    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>

      <div id="main">
        <div class="block">
          <%= yield %>
        </div>

        <div id="footer">
          <div class="block">
            <p>Copyright &copy; <%= Time.now.year %> PT. Top Food Indonesia.</p>
          </div>
        </div>
      </div>

      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>

  </div>

  <%= yield :js %>
</body>
</html>
