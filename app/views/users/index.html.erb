<div class="content">
  <h2>User</h2>

  <div class="inner">
    <div class="link-button-container">
      <%= link_to "New", new_user_path, class: 'link-button' %>

      <div class="clear"></div>
    </div>

    <table class="table">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Position</th>
        <th>Branch</th>
        <th class="last">&nbsp;</th>
      </tr>
      <% @users.each do |dept| %>
        <tr>
          <td><%= dept.name %></td>
          <td><%= dept.email %></td>
          <td><%= dept.management.try(:name) %></td>
          <td><%= dept.branch.try(:name) %></td>
          <td class="last">
            <%#= link_to 'Show', user_path(dept) %>
            <%= link_to 'Edit', edit_user_path(dept) %>
            <%= link_to 'Remove', user_path(dept), method: :delete, confirm: 'Are you sure?' %>
          </td>
        </tr>
      <% end unless @users.blank? %>
    </table>

    <div class="actions-bar wat-cf">
      <div class-"page-entries">
        <%= page_entries_info @users %>
      </div>
      <div class="pagination">
        <%= will_paginate %>
      </div>
    </div>

  </div>
</div>